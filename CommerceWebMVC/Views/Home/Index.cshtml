@using Ploeh.Samples.Commerce.Domain

<asp:Content ID="indexTitle" ContentPlaceHolderID="TitleContent" runat="server">
    Home Page
</asp:Content>

<asp:Content ID="indexContent" ContentPlaceHolderID="MainContent" runat="server">
    <h2>Featured Products</h2>
    <div>
        @foreach (var product in Model.Products) {
            @product.SummaryText
            @Html.ActionLink("Add to basket", "Add", "Basket", new {Id = product.Id}, null)
            <br />
        }
    </div>

    <h3>Select currency:</h3>
    <div>@Html.ActionLink("DKK", "SetCurrency", new { id = "DKK"} )</div>
    <div>@Html.ActionLink("USD", "SetCurrency", new { id = "USD"} )</div>
    <div>@Html.ActionLink("EUR", "SetCurrency", new { id = "EUR"} )</div>

</asp:Content>